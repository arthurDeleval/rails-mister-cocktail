<%= render 'shared/banner' %>

<div class="container">

  <div class="cards">
    <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
        <% @cocktails.each do |cocktail| %>
            <%= link_to cocktail.name, cocktail_path(cocktail) %>
            <% unless  cocktail.photo.attachment.nil? %>
              <%= cl_image_tag cocktail.photo.key, height: 300, width: 400, crop: :fill %>
            <% end %>
          <% end %>
    </div>
    <%= link_to "Add a new cocktail", new_cocktail_path %>
  </div>
</div>
